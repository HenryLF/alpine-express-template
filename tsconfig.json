  "compilerOptions": {
    "target": "es2024",
    "outDir": "build",
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "src/public/lib",
    "node_modules"
  ]
}